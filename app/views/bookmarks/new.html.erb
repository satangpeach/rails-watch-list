<h1>Add a movie to <%= @list.name %></h1>

<%= simple_form_for([@list, @bookmark]) do |f| %>
  <%= f.input :movie_id, collection: Movie.all, prompt: "Choose a movie", label: "Movie", as: :select %>
  <%= f.input :comment, label: "Your comment" %>
  <%= f.submit "Add bookmark" %>
<% end %>

<%= link_to 'Back to list', list_path(@list) %>
